{
  "name": "ether-goblin",
  "version": "0.8.3",
  "description": "A microservice for the Ethereum ecosystem.",
  "author": "jovijovi <mageyul@hotmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "microservice",
    "ether-goblin",
    "ethereum",
    "ether",
    "goblin",
    "API",
    "NFT",
    "ERC721",
    "ERC20",
    "event",
    "listener",
    "fetcher",
    "watchdog"
  ],
  "scripts": {
    "compile": "yarn hardhat compile",
    "deploy:gob": "hardhat run ./scripts/deploy_gob.ts --network custom",
    "flatten": "hardhat flatten ${CONTRACT_SRC} > ${CONTRACT_DST}",
    "clean": "yarn hardhat clean && rm -rf ./dist && rm -rf ./cache",
    "test": "hardhat test",
    "typecheck": "yarn compile && yarn test && yarn tsc --noEmit",
    "build": "yarn clean && yarn compile && tsc --build && cp -ap ./conf ./dist/ && cp -ap ./template ./dist/",
    "dev-run": "ts-node ./src/main/index.ts",
    "dist-run": "node ./dist/src/main/index.js"
  },
  "dependencies": {
    "@jovijovi/ether-core": "0.5.0",
    "@jovijovi/ether-network": "0.3.0",
    "@jovijovi/express-2fa-token": "^1.1.0",
    "@jovijovi/pedrojs-common": "1.1.14",
    "@jovijovi/pedrojs-mysql": "1.1.14",
    "@jovijovi/pedrojs-network-http": "1.1.15",
    "@jovijovi/pedrojs-pg": "1.1.14",
    "@jovijovi/pedrojs-sqlite": "1.1.14",
    "@openzeppelin/contracts": "4.7.3",
    "ethers": "5.7.0",
    "fastq": "^1.13.0",
    "got": "11.8.5",
    "lru-cache": "7.14.0",
    "nodemailer": "^6.7.8",
    "nodemailer-openpgp": "^2.1.0",
    "write-file-atomic": "^4.0.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.1.1",
    "@nomiclabs/hardhat-etherscan": "3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@tsconfig/node16": "^1.0.3",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.2",
    "@types/chai": "4.3.3",
    "@types/chai-as-promised": "7.1.5",
    "@types/mocha": "9.1.1",
    "@types/node": "18.7.11",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "chai": "4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.22.0",
    "hardhat": "2.10.2",
    "mocha": "^10.0.0",
    "ts-generator": "^0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.1.0",
    "typescript": "4.7.4"
  }
}
