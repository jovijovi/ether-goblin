{
  "name": "ether-goblin",
  "version": "0.2.1",
  "description": "A microservice for the Ethereum ecosystem.",
  "author": "jovijovi <mageyul@hotmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "microservice",
    "ether-goblin",
    "ethereum",
    "ether",
    "goblin",
    "API",
    "NFT",
    "ERC721",
    "ERC20"
  ],
  "scripts": {
    "compile": "yarn hardhat compile",
    "deploy:gob": "hardhat run ./scripts/deploy_gob.ts --network custom",
    "flatten": "hardhat flatten ${CONTRACT_SRC} > ${CONTRACT_DST}",
    "clean": "yarn hardhat clean && rm -rf ./dist",
    "test": "hardhat test",
    "typecheck": "yarn compile && yarn test && yarn tsc --noEmit",
    "build": "yarn clean && yarn compile && tsc --build && cp -ap ./conf ./dist/ && cp -ap ./template ./dist/",
    "dev-run": "ts-node ./src/main/index.ts",
    "dist-run": "node ./dist/src/main/index.js"
  },
  "dependencies": {
    "@jovijovi/ether-core": "0.1.3",
    "@jovijovi/ether-network": "0.1.3",
    "@jovijovi/pedrojs-common": "1.1.0",
    "@jovijovi/pedrojs-network-http": "1.1.0",
    "@jovijovi/pedrojs-pg": "^1.1.0",
    "@jovijovi/pedrojs-sqlite": "1.1.0",
    "@openzeppelin/contracts": "^4.6.0",
    "@types/lru-cache": "^7.10.10",
    "@types/node-schedule": "^2.1.0",
    "ethers": "5.6.8",
    "fastq": "^1.13.0",
    "got": "11.8.3",
    "node-schedule": "^2.1.0",
    "nodemailer": "^6.7.5"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.6",
    "@nomiclabs/hardhat-etherscan": "3.0.4",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@tsconfig/node16": "^1.0.2",
    "@typechain/ethers-v5": "10.0.0",
    "@typechain/hardhat": "6.0.0",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "7.1.5",
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.17.0",
    "hardhat": "2.9.7",
    "mocha": "^10.0.0",
    "ts-generator": "^0.1.1",
    "ts-node": "10.8.1",
    "typechain": "8.0.0",
    "typescript": "4.7.3"
  }
}
